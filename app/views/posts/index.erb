<html>
    <head>
        <meta charset="utf-8">
        <title>Going post'all</title>
    </head>
    <body>
        <h1>Going post'all</h1>
        <% if @posts.all.any? %>
        <% @posts.all.each do |post|  %>
        <%= link_to post.caption, post_path(post) %>
        <p><%= post.description %></p>
        <% post.comments.each do |comment| %>
        <p><%= comment.thoughts %></p>
        <% end %>
        <%= image_tag post.image.url(:thumb) %>
        <p><%= link_to "Like post", new_post_like_path(post) %></p>
        <p><%= pluralize post.likes.count, 'like' %></p>
        <p><%= link_to "Show #{post.caption}", post_path(post) %></p>
        <p><%= link_to "Edit #{post.caption}", edit_post_path(post) %></p>
        <p><%= link_to "Delete #{post.caption}", post_path(post), method: :delete %></p>
        <p><%= link_to "Review #{post.caption}", new_post_comment_path(post) %></p>
        <% end %>
    <% else %>
        <h1>No posts yet!</h1>
        <% end %>
        <a href="/posts/new">Add a post</a>
    </body>
</html>

<style>

    body {
        background-image: url('http://www.easterlingstudios.com/assets/images/background.jpg');
        background-position: center;
    }

</style>
